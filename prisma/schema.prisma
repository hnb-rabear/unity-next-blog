// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model BlogPost {
    id      Int    @id @default(autoincrement())
    slug    String @unique
    views   Int    @default(0)
    upvotes Int    @default(0)
}

model Visitor {
    ip        String @unique
    userAgent String
}
